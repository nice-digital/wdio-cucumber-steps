{
	"semi": true,
	"singleQuote": false,
	"trailingComma": "es5",
	"useTabs": true,
	"printWidth": 80,
	"endOfLine": "auto",
	"overrides": [
		{
			"files": ["**/*.{scss,md,yml,sh}"],
			"options": {
				"useTabs": false,
				"tabWidth": 2,
				"singleQuote": true
			}
		},
		{
			"files": ["../**/*.json", "*.json"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
