{
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/support/**/*.js",
      "src/given/**/*.js",
      "src/when/**/*.js",
      "src/then/**/*.js"
    ],
    "notify": true,
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "roots": [
      "test/"
    ],
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
